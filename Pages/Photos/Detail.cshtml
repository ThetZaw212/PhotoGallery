@page "{id:int}"
@model PhotoGallery.Pages.Photos.DetailModel
@{
    ViewData["Title"] = "Photo Detail";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <style>
        body {
            background-color: #f1f3f5;
            font-family: 'Segoe UI', sans-serif;
        }

        .photo-detail-container {
            max-width: 1100px;
            margin: 60px auto;
            display: flex;
            gap: 40px;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 6px 24px rgba(0,0,0,0.08);
            overflow: hidden;
        }

        .photo-preview {
            flex: 1;
            background-color: #000;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .photo-preview img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
            }

        .photo-info {
            flex: 1;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .photo-info h2 {
                font-size: 2rem;
                margin-bottom: 0.5rem;
            }

        .photo-meta {
            font-size: 0.95rem;
            color: #6c757d;
            margin-bottom: 1rem;
        }

            .photo-meta i {
                margin-right: 6px;
            }

        .photo-description {
            font-size: 1rem;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .tags {
            margin-bottom: 1.5rem;
        }

            .tags span {
                background-color: #dee2e6;
                color: #343a40;
                padding: 0.4rem 0.9rem;
                border-radius: 20px;
                margin-right: 8px;
                font-size: 0.85rem;
            }

        .action-buttons {
            display: flex;
            justify-content: space-between;
        }

            .action-buttons a, .action-buttons button {
                border-radius: 30px;
                padding: 0.6rem 1.6rem;
                font-size: 0.95rem;
            }
    </style>
</head>
<body>
    <div class="photo-detail-container">
        <div class="photo-preview">
            <img src="" alt="Photo" />
        </div>
        <div class="photo-info">
            <div>
                <h2></h2>
                <div class="photo-meta">
                    <p><i class="fa-regular fa-user"></i> Owner: <span class="owner-name"></span></p>
                    <p><i class="fa-solid fa-location-dot"></i> Location: <span class="location"></span></p>
                    <p><i class="fa-regular fa-calendar"></i> Uploaded: <span class="uploaded-date"></span></p>
                </div>
                <div class="photo-description"></div>
                <div class="tags"></div>
            </div>
            <div class="action-buttons">
                <a href="/Photos/List" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Back to Gallery
                </a>
                <button class="btn btn-danger">
                    <i class="fa-solid fa-trash-alt me-1"></i> Delete Photo
                </button>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            const photoId = window.location.pathname.split('/').pop();

            function loadPhotoDetail(id) {
                $.ajax({
                    url: `/api/Photos/${id}`,
                    type: 'GET',
                    success: function (response) {
                        const photo = response.data;

                        $('.photo-preview img').attr('src', photo.thumbnail).attr('alt', photo.title);
                        $('.photo-info h2').text(photo.title);
                        $('.owner-name').text(photo.ownerName);
                        $('.location').text(photo.location || 'Unknown');
                        $('.uploaded-date').text(photo.uploadedDate);
                        $('.photo-description').html(`<p>${photo.description}</p>`);

                        const tagContainer = $('.tags');
                        tagContainer.empty();
                        if (photo.tags?.length) {
                            photo.tags.forEach(tag => tagContainer.append(`<span>#${tag}</span>`));
                        }

                        $('.btn-danger').off('click').on('click', function () {
                            if (!confirm('Are you sure you want to delete this photo?')) return;

                            $.ajax({
                                url: `/api/Photos/${photo.id}`,
                                type: 'DELETE',
                                success: function () {
                                    alert('Photo deleted successfully.');
                                    window.location.href = '/Photos/List';
                                },
                                error: function (xhr) {
                                    alert('Failed to delete photo: ' + xhr.statusText);
                                }
                            });
                        });
                    },
                    error: function (xhr) {
                        alert('Failed to load photo details: ' + xhr.statusText);
                    }
                });
            }

            loadPhotoDetail(photoId);
        });
    </script>
</body>
</html>
