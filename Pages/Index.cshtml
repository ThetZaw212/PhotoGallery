@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .login-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: #fff;
            border-radius: 1rem;
            padding: 2rem;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

            .login-card h4 {
                font-weight: 600;
            }

        .form-control {
            border-radius: 0.75rem;
        }

        .btn-primary {
            border-radius: 0.75rem;
        }

        .validation-error {
            color: red;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="login-card">
            <div class="text-center mb-4">
                <i class="fas fa-image fa-3x text-warning"></i>
                <h4 class="mt-2">Welcome to Photo Gallery</h4>
                <p class="text-muted">Login to explore stunning images</p>
            </div>

            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input asp-for="Input.UserName" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Input.UserName" class="validation-error"></span>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="validation-error"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i> Login
                    </button>
                </div>

                <div class="mt-3 text-center">
                    <a href="#" class="text-decoration-none">Create New Account</a>
                </div>

                <div class="text-danger text-center mt-3">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <span>@Model.ErrorMessage</span>
                    }
                </div>
            </form>
        </div>
    </div>
</body>
</html>